@using Library.API.ViewModels.Authors
@using Library.API.ViewModels.Authors.AuthorsPage
@model AuthorsPageViewModel

@{
    ViewData["Title"] = "Authors";
    var anonymousImageUrl = "https://ui-avatars.com/api/?name=Anonymous&background=0D8ABC&color=fff&size=140";
}

<h1 class="mb-4 text-dark">Authors</h1>

<!-- Delete Authors Form -->
<form asp-controller="Authors" asp-action="DeleteAuthors" method="post"
      onsubmit="return confirm('Are you sure you want to delete the selected authors?');">

    <div class="list-group list-group-flush">
        @if (Model.AuthorList.Any())
        {
            @foreach (var author in Model.AuthorList)
            {
                var imgUrl = string.IsNullOrWhiteSpace(author.ImageUrl) ? anonymousImageUrl : author.ImageUrl;
                <div class="list-group-item author-item position-relative p-3 mb-3 rounded-3 shadow-sm">

                    <input type="checkbox" name="SelectedAuthorIds" value="@author.Id"
                           class="delete-checkbox form-check-input position-absolute" />

                    <a asp-controller="Authors" asp-action="GetAuthorDetails" asp-route-authorId="@author.Id"
                       class="d-flex align-items-start text-decoration-none text-dark">

                        <img src="@imgUrl" alt="@($"{author.FirstName} {author.LastName}")"
                             class="author-img rounded-3 me-3 flex-shrink-0" />

                        <div class="author-info flex-grow-1">
                            <h5 class="fw-bold mb-1">
                                @author.FirstName
                                @(string.IsNullOrWhiteSpace(author.MiddleName) ? "" : author.MiddleName + " ")
                                @author.LastName
                            </h5>

                            @if (!string.IsNullOrWhiteSpace(author.Biography))
                            {
                                <p class="fs-5 fst-italic">
                                    @author.Biography
                                </p>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No biography available.</p>
                            }
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <h5 class="text-muted fst-italic">No author available.</h5>
        }
    </div>

    <div class="mt-4 d-flex justify-content-between align-items-center">
        <!-- Pagination on the left -->
        <nav aria-label="Author pagination">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="GetAuthors" asp-route-page="@(Model.Page - 1)">←</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">@Model.Page</span>
                </li>
                <li class="page-item @(Model.HasMorePages ? "" : "disabled")">
                    <a class="page-link" asp-action="GetAuthors" asp-route-page="@(Model.Page + 1)">→</a>
                </li>
            </ul>
        </nav>

        <!-- Delete button on the right -->
        <button type="submit" class="btn btn-danger btn-lg">
            Delete Selected
        </button>
    </div>
</form>

<hr class="my-5" />

<!-- Add Author Form -->
<h3 class="mb-3">Add New Author</h3>
<form asp-controller="Authors" asp-action="AddAuthor" method="post">
    <div class="row">
        <!-- Left column: names + image URL + image preview -->
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="AddAuthor.FirstName" class="form-label"></label>
                <input asp-for="AddAuthor.FirstName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AddAuthor.MiddleName" class="form-label"></label>
                <input asp-for="AddAuthor.MiddleName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AddAuthor.LastName" class="form-label"></label>
                <input asp-for="AddAuthor.LastName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AddAuthor.ImageUrl" class="form-label"></label>
                <input asp-for="AddAuthor.ImageUrl" class="form-control"
                       id="imageUrlInput" placeholder="Enter image URL" />
            </div>

            <!-- Image preview -->
            <div class="mb-3">
                <img id="imagePreview" src="#" alt="Author Image Preview"
                     class="img-fluid rounded shadow-sm d-none" />
            </div>
        </div>

        <!-- Right column: Biography -->
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="AddAuthor.Biography" class="form-label"></label>
                <textarea asp-for="AddAuthor.Biography" class="form-control" rows="10"></textarea>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Add Author</button>
</form>

