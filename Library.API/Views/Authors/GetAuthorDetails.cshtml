@using Library.API.ViewModels.Authors
@model AuthorDetailsViewModel

@{
    ViewData["Title"] = "Author Details";
    var anonymousImageUrl = "https://ui-avatars.com/api/?name=Anonymous&background=0D8ABC&color=fff&size=200";
    var imgUrl = string.IsNullOrWhiteSpace(Model.ImageUrl) ? anonymousImageUrl : Model.ImageUrl;
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <div class="row g-4">
            <!-- Author Image -->
            <div class="col-md-4 text-center">
                <img src="@imgUrl"
                     alt="@($"{Model.FirstName} {Model.LastName}")"
                     class="author-details-img img-fluid rounded-3 shadow-sm"/>
            </div>

            <!-- Author Info -->
            <div class="col-md-8">
                <h2 class="fw-bold mb-3">
                    @Model.FirstName
                    @(string.IsNullOrWhiteSpace(Model.MiddleName) ? "" : Model.MiddleName + " ")
                    @Model.LastName
                </h2>

                @if (!string.IsNullOrWhiteSpace(Model.Biography))
                {
                    <p class="fs-5 fst-italic">@Model.Biography</p>
                }
                else
                {
                    <p class="text-muted fst-italic">No biography available.</p>
                }
            </div>
        </div>

        <hr class="my-4" />

        <!-- Books Section -->
        <div>
            <h2 class="fw-bold mb-3">Books</h2>
            <p class="text-muted fst-italic">No books available yet.</p>
        </div>
    </div>
</div>


